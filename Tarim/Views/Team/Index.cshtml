@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div>
    <a href="/Team/AddTeam" class="btn btn-outline-info">Yeni Personel Girişi</a>
</div>
<br/>

@if(Model.Count==0){
    
    <div class="alert alert-danger" role="alert">
        Takım Listesinde hiçbir personel bulunamamıştır!
    </div>
    
}
else{

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Listesi</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Görsel</th>
                            <th>#</th>
                            <th>Ad</th>
                            <th>Görev</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="py-1">
                                        <img src="@item.ImageUrl" alt="image" />
                            </td>
                            <td>@item.TeamId</td>
                            <td>@item.PersonName</td>
                            <td>@item.Title</td>
                            <td>
                                <a href="/Team/DeleteTeam/@item.TeamId" class="btn btn-outline-danger">Sil</a>
                            </td>
                            <td>
                                <a href="/Team/UpdateTeam/@item.TeamId" class="btn btn-outline-success">Güncelle</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table> 
            </div>
        </div>
    </div>
</div>

}