@model Contact
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Mesaj Detayı</h1>

<form method="post">
    <div class="form-group">
        @Html.HiddenFor(x=>x.ContactId)
        @Html.Label("Adı Soyadı")
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Mail Adresi")
        <input type="text" asp-for="Mail" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Tarih")
        <input type="text" asp-for="Date" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Mesaj Detayı")
        <textarea type="text" cols="5" rows="20" asp-for="Message" class="form-control" ></textarea>
    </div>
</form>



