@model Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Hizmet Güncelleme</h1>

<form method="post">
    @Html.HiddenFor(x=>x.ServiceId)
    <div class="form-group">
        @Html.Label("Başlık")
        <span asp-validation-for="Title" class="text-danger"></span>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Görsel Yolu")
        <span asp-validation-for="Image" class="text-danger"></span>
        <input type="text" asp-for="Image" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Açıklama")
        <span asp-validation-for="Description" class="text-danger"></span>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <button class="btn btn-success">Değişiklikleri Kaydet</button>
</form>