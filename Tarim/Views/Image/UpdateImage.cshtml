@model Image
@{
    ViewData["Title"] = "UpdateImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Görsel Düzenleme Sayfası</h1>

<form method="post">
    @Html.HiddenFor(x=>x.ImageId)
    <div class="form-group">
        @Html.Label("Görsel Yolu")
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
        <input type="file" asp-for="ImageUrl" class="form-control" id="formFile" />
    </div>
    <div class="form-group">
        @Html.Label("Başlık")
        <span asp-validation-for="Title" class="text-danger"></span>
        <input type="text" asp-for="Title" class="form-control" />
    </div>

    <button class="btn btn-success">Değişiklikleri Kaydet</button>
</form>

